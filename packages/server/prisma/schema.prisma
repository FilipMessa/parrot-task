generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id     Int      @id @default(autoincrement())
    email  String   @unique
    name   String?
    Record Record[]
}

model Record {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    notes     String?
    state     String
    name      String
    assignee  User?    @relation(fields: [userId], references: [id])
    userId    Int
}
